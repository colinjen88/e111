# ============================================================
# E111 Booking System - Environment Configuration
# ============================================================
# Copy this file to .env and update values for your environment.
# NEVER commit the actual .env file to version control!
# ============================================================

# Admin Configuration (REQUIRED)
ADMIN_PASSWORD=change_this_strong_password
ADMIN_SECRET_TOKEN=change_this_random_string_32_chars

# Database (REQUIRED)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/e111_booking
# For Docker Compose usage:
# DATABASE_URL=postgresql://postgres:postgres@db:5432/e111_booking

# Nuxt
NUXT_HOST=0.0.0.0

# LINE Messaging API (optional)
NUXT_LINE_CHANNEL_SECRET=
NUXT_LINE_CHANNEL_ACCESS_TOKEN=

# ============================================================
# Production Docker Compose Variables (docker-compose.prod.yml)
# ============================================================
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=your_secure_db_password
# POSTGRES_DB=e111_booking

# ============================================================
# VPS Deployment (scripts/deploy_vps.ps1)
# ============================================================
# VPS_HOST=your-server-ip
# VPS_PORT=22
# VPS_USER=root
